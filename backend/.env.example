# Database Configuration
DATABASE_URL="postgresql://postgres:your-password-here@localhost:5432/ping_dev"

# Docker PostgreSQL Configuration (for docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=ping_dev

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Better Auth Configuration
# Get OAuth credentials from:
# - Google: https://console.cloud.google.com/
# - GitHub: https://github.com/settings/developers
# - Apple: https://developer.apple.com/account/

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-here-replace-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Apple OAuth (optional)
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY="your-apple-private-key"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3001,http://localhost:8081"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880"  # 5MB in bytes
