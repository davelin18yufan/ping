{
    "name": "ping-server",
    "type": "module",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "db:migrate": "bunx --bun prisma migrate dev",
        "db:seed": "bunx --bun prisma db seed",
        "db:studio": "bunx --bun prisma studio",
        "db:generate": "bunx --bun prisma generate",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "test:redis": "bun run test-redis.ts",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix",
        "format": "oxfmt",
        "format:check": "oxfmt --check",
        "type-check": "bunx --bun tsc --noEmit",
        "prisma:generate": "bunx --bun prisma generate",
        "prisma:migrate:deploy": "bunx --bun prisma migrate deploy"
    },
    "dependencies": {
        "@escape.tech/graphql-armor-max-depth": "^2.4.2",
        "@graphql-yoga/plugin-disable-introspection": "^2.19.0",
        "@prisma/adapter-pg": "^7.4.1",
        "@prisma/client": "^7.4.1",
        "@socket.io/bun-engine": "^0.1.0",
        "better-auth": "^1.4.19",
        "dataloader": "^2.2.3",
        "graphql": "^16.12.0",
        "graphql-yoga": "^5.18.0",
        "hono": "^4.12.2",
        "ioredis": "^5.9.3",
        "pg": "^8.18.0",
        "prisma": "^7.4.1",
        "socket.io": "^4.8.3"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^25.3.0",
        "@types/pg": "^8.16.0",
        "oxfmt": "^0.35.0",
        "oxlint": "^1.50.0",
        "socket.io-client": "^4.8.3"
    },
    "prisma": {
        "seed": "bun run prisma/seed.ts"
    }
}
