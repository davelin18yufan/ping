{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",
        "jsx": "react-native",
        "lib": ["ES2022"],

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,

        /* Type Checking - Strict mode aligned with frontend/backend */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        /* Interop Constraints */
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Skip Lib Check */
        "skipLibCheck": true,

        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["./components/*"],
            "@app/*": ["./app/*"],
            "@hooks/*": ["./hooks/*"],
            "@constants/*": ["./constants/*"],
            "@assets/*": ["./assets/*"],
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "jest.config.js",
        "tailwind.config.js"
    ]
}
